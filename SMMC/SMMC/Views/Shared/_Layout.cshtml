              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <script language="javascript" type="text/javascript">
        var contactElement = null;
        var guardianElement = null;

        function hideContact() {
            var contactValue = document.getElementById('contact');
            contactValue.style.display = "none";
            contactElement.style.display = "inline";
        }

        function hideGuardian() {
            var guardianContactValue = document.getElementById('guardian');
            guardianContactValue.style.display = "none";
            guardianElement.style.display = "inline";
        }

        function change() {
            var input = document.getElementById('type').value;
            var d = new Date(input);

            if (!!d.valueOf()) {
                year = d.getFullYear();
                month = d.getMonth();
                day = d.getDate();
                varDate = isDate18orMoreYearsOld(day, month, year);
                var today = new Date();
                today.setHours(0, 0, 0, 0);
                if (varDate) {
                    guardianElement = null;
                    contactElement = contact;
                    hideContact();
                    hideGuardian();
                }
                else {
                    contactElement = null;
                    guardianElement = guardian;
                    hideGuardian();
                    hideContact();
                    Model.guardian = true;
                }
            }
        }

        function isDate18orMoreYearsOld(day, month, year) {
            return new Date(year + 18, month - 1, day) <= new Date();
        }
    </script>
</head>
