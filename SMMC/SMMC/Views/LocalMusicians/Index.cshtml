@model IEnumerable<SMMC.Models.LocalMusicians>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.Phone)
            </td>
            <td>
                <a asp-action="AddToEnsemble" asp-route-id="@item.LocalMusiciansId">Add Ensemble</a> |
                <a asp-action="Edit" asp-route-id="@item.LocalMusiciansId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LocalMusiciansId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LocalMusiciansId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
