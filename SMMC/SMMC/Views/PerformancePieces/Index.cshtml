@model IEnumerable<SMMC.Models.PerformancePiece>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Performance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Piece)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Performance.PerformanceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piece.PieceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PerformancePieceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PerformancePieceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PerformancePieceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
