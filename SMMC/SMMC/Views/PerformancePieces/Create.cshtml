@model SMMC.Models.PerformancePiece

@{
    ViewData["Title"] = "Create";
}



@if (ViewBag.PieceId == null)
{
    <p>No pieces to add.</p>
}
else
{
    <h4>Add Peice</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="PerformanceId" value="@ViewBag.PerformanceId">

                <div class="form-group">
                    <label asp-for="PieceId" class="control-label"></label>
                    <select asp-for="PieceId" class="form-control" asp-items="ViewBag.PieceId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index" asp-controller="Performances">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
