@model SMMC.Models.Instrument

@{
    ViewData["Title"] = "Create";
}

<h4>Add Instrument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Instrument1" class="control-label">Instrument</label>
                <input asp-for="Instrument1" class="form-control" />
                <span asp-validation-for="Instrument1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentFee" class="control-label">Student Fee</label>
                <input asp-for="StudentFee" class="form-control" />
                <span asp-validation-for="StudentFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenFee" class="control-label">Open Fee</label>
                <input asp-for="OpenFee" class="form-control" />
                <span asp-validation-for="OpenFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HireFee" class="control-label">Hire Fee</label>
                <input asp-for="HireFee" class="form-control" />
                <span asp-validation-for="HireFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadTutor" class="control-label">Head Tutor</label>
                <select asp-for="HeadTutor" class ="form-control" asp-items="ViewBag.HeadTutor"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
